---
import Layout from '@/layouts/Layout.astro';
import 'katex/dist/katex.min.css';
import 'highlight.js/styles/atom-one-dark.css';
---

<Layout title="SpeakWithMe">
  <div id="container" class="container-full">
    <div class="flex flex-col h-full bg-white">
      <div class="h-[60px] flex items-center justify-center bg-slate-200">
        <span class="pr-1 text-gradient ri-chat-voice-ai-line ri-2x"></span>
        <span class="ui-monospace text-3xl text-gradient font-800">
          SpeakWithMe
        </span>
      </div>
      <div class="mt-10 flex items-center justify-center">
        <iframe
          class="flex items-center justify-center"
          src="https://docs.google.com/forms/d/e/1FAIpQLSeQib1rWv0EwJQKKGcnSCwUCYOuMHV7jlJ36URKawcAca-n3g/viewform?embedded=true"
          width="640"
          height="610"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
        >
          Loadingâ€¦
        </iframe>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .container-default {
    max-width: 1200px;
    width: 80vw;
    height: 80vh;
  }

  .container-loose {
    max-width: 1800px;
    width: 90vw;
    height: 90vh;
  }

  .container-full {
    width: 100vw;
    height: 100vh;
  }

  /* mobile style */
  @media screen and (max-width: 768px) {
    #container {
      width: 100vw;
      height: 100%;
    }
  }
</style>
